<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs')%>
  </head>
  <body>
    <header>
      <%- include('../partials/header.ejs')%>
    </header>
    <main class="body-container">
      <h1><%=cakes.name%></h1>
      <div class="small-screens">
        <div class='show-img-container'>
          <%for(img of cakes.img){%>
            <img class="show-images" src="<%=img%>"></img>
          <%}%>
        </div>
      </div>
      <div class="under-show-imgs">
        <div class="show-index-link">
          <a href='/cakes'>Back to Cakes Page</a>
        </div>
      <div class="show-info">
        <ul>
          <li><%=cakes.description%></li>
          <li>$<%=cakes.price%></li>
          <li>
            <% if (cakes.qty > 0) { %>
              Quantity in Stock: <%=cakes.qty%>
            <% } else { %>
              Out of Stock
            <% } %>
          </li>
          <% if (cakes.qty > 0) { %>
            <form action="/cakes/<%=cakes._id%>/qty?_method=PUT" method="POST">
              <input class="button" type="submit" value="ORDER">
            </form>
          <% } %>
        </ul>
      </div>
      <div class="edit-delete">
        <a class="edit-button" href="/cakes/<%=cakes._id%>/edit">Edit</a>
        <form action="/cakes/<%=cakes._id%>?_method=DELETE" method="POST">
          <input class="delete-button" type="submit" value="Delete" /><br/>
        </form>
      </div>
      </div>
    </main>
    <footer>
      <%- include('../partials/footer.ejs')%>
    </footer>
  </body>
</html>
