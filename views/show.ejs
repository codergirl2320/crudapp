<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs')%>
  </head>
  <body>
    <header>
    <%- include('./partials/header.ejs')%>
    </header>
    <main class="body-container">
    <h1><%=cakes.name%></h1>
      <div class='container'>
        <%for(img of cakes.img){%>
          <img class="images" src="<%=img%>"></img>
        <%}%>
      </div>
      <div class="info">
      <ul>
        <li><%=cakes.description%></li>
        <li>$<%=cakes.price%></li>
        <li>qty:<%=cakes.qty%></li>
      </ul>
    </div>
    <div class="edit-delete">
        <a href="/cakes/<%=cakes._id%>/edit"><button>Edit Cake</button></a>
        <form action="/cakes/<%=cakes._id%>?_method=DELETE" method="POST">
        <input class='button' type="submit" value="Delete Cake" /><br/>
        </form>
    </div>
      <a href='/cakes'>Back to Cakes Index</a>
    </main>
    <footer>
      <%- include('./partials/footer.ejs')%>
    </footer>
  </body>
</html>
